@model VendorInvoicesViewModel

<div class="container">
    <div class="row">
        <h4 class="text-left col-8">Invoice for @Model.VendorName</h4>

        @if (Model.NameGroupFilterId != null && Model.NameGroupFilterId != 0)
        {
            <a asp-action="VendorList" asp-route-nameGroupFilterId="@Model.nameGroupFilter.NameGroupId" class="text-right col-4">Return to @Model.nameGroupFilter.GroupName Vendors</a>
        }
        else
        {
            <a asp-action="VendorList" asp-route-nameGroupFilterId="0" class="text-right col-4">Return to Vendor List</a>
        }
    </div>

    <div class="row">
        @if (Model.VendorAdd != null)
        {
            <span style="color:gray;" class="text-left col-7">Address: @Model.VendorAdd</span>
        }
        @if (Model.VendorTerm != null)
        {
            <span style="color:gray;" class="text-right col-5">Terms: @Model.VendorTerm</span>
        }
    </div>
    @if (Model.invoices.Count() > 0)
    {
        <div class="row pt-5">
            <div class="col-3">
                <h4 class="font-weight-bold">Invoices:</h4>
                <ul class="nav nav-pills flex-column">
                    @foreach (var invoice in Model.invoices)
                    {
                        <li class="nav-item">
                            <a asp-action="VendorInvoicesList"
                               asp-route-invoiceId="@invoice.InvoiceId"
                               asp-route-filterId="@Model.NameGroupFilterId"
                               class="nav-link @Model.GetActiveInvoice(invoice.InvoiceId)">Invoice: @invoice.InvoiceNumber</a>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-3"></div>
            <div class="col-6">
                @if (Model.SelectedInvoice != null)
                {
                    <h4 class="font-weight-bold">Line Items for Invoice @Model.SelectedInvoice.InvoiceNumber</h4>

                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (InvoiceLineItem lineItem in Model.InvoiceLineItems)
                            {
                                <tr>
                                    <td>@lineItem.LineItemDescription</td>
                                    <td>@lineItem.LineItemAmount.ToString("C2")</td>
                                </tr>
                            }
                            @if (Model.InvoiceLineItems.Count() > 0)
                            {
                                <tr>
                                    <td>Total</td>
                                    <td>@Model.SelectedInvoice.InvoiceTotal.ToString("C2")</td>
                                </tr>
                            }

                        </tbody>
                    </table>


                    <form method="post"
                          asp-action="AddNewInvoiceLineItem"
                          asp-route-generalLedgerId="@Model.generalLedgerId"
                          asp-route-vendorId="@Model.SelectedInvoice.VendorId"
                          asp-route-filterId ="@Model.NameGroupFilterId"
                          asp-route-invoiceId="@Model.SelectedInvoiceId">

                        <div class="row pb-2">
                            <label class="col-3">Description:</label>
                            <input type="text" name="description" class="col-9 form-control" />
                            <span class="text-danger"></span>
                        </div>

                        <div class="row pb-2">
                            <label class="col-3">Amount:</label>
                            <input type="text" name="amount" class="col-9 form-control" />
                            <span class="text-danger"></span>
                        </div>

                        <input class="btn btn-outline-info" type="submit" value="Add new line item" />
                    </form>
                }
            </div>
        </div>
    }
    else
    {
        <div class="jumbotron pt-5 text-center">
            <h2>No invoices for vendors: @Model.VendorName</h2>
        </div>
    }

</div>

